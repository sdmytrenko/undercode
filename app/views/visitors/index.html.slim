      .item.active
        .fill style=("background-image: url(assets/slide_1.jpg);") 
        .carousel-caption
          h2 Caption 1
      .item
        .fill style="background-image:url(assets/slide_2.jpg);" 
        .carousel-caption
          h2 Caption 2
      .item
        .fill style="background-image:url(assets/slide_3.jpg);" 
        .carousel-caption
          h2 Caption 3
      .item.active
        .fill style=("background-image: url(assets/slide_4.jpg);") 
        .carousel-caption
          h2 Caption 1
    /! Controls/
    a.left.carousel-control data-slide="prev" href="#myCarousel" 
      span.icon-prev
    a.right.carousel-control data-slide="next" href="#myCarousel" 
